{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/api/politicians(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, s-maxage=60, stale-while-revalidate=30"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/update-politicians",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/recalculate-ranks",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/aggregate-trending",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/generate-statistics",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 2 * * 0"
    },
    {
      "path": "/api/cron/backup",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/crawl-news",
      "schedule": "0 8,14,20 * * *"
    }
  ]
}
