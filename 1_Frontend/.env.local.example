# Project Grid Task ID: P1D5
# 작업명: Supabase 프로젝트 설정
# 생성시간: 2025-10-31
# 생성자: Claude-Sonnet-4.5
# 의존성: P1D1
# 설명: PoliticianFinder 프로젝트의 모든 환경 변수를 정의하는 템플릿 파일입니다. 이 파일을 복사하여 .env.local을 생성하고 실제 값을 채워야 합니다.
#


# ============================================================================
# Supabase 설정
# ============================================================================
# Supabase 콘솔 (https://app.supabase.com) > Settings > API 에서 발급

# Supabase 프로젝트 URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase Anon Key (공개 키 - 클라이언트 측에서 사용)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (비공개 키 - 서버 측 API에서만 사용)
# ⚠️ 주의: 이 키는 절대 클라이언트에 노출하면 안 됩니다!
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================================================
# Google OAuth 설정
# ============================================================================
# Google Cloud Console (https://console.cloud.google.com) > APIs & Services > Credentials

GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret

# ============================================================================
# Next.js 설정
# ============================================================================

# API Base URL
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Site URL (프로덕션: https://politicianfinder.com)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# 환경 (development, staging, production)
NEXT_PUBLIC_ENV=development

# ============================================================================
# JWT 설정
# ============================================================================
# JWT Secret (암호화 키 - 안전하게 생성)
# 생성 방법: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here

# Access Token 만료 시간 (초)
JWT_ACCESS_TOKEN_EXPIRY=3600

# Refresh Token 만료 시간 (초)
JWT_REFRESH_TOKEN_EXPIRY=604800

# ============================================================================
# 이메일 설정 (SMTP)
# ============================================================================
# 이메일 전송을 위한 SMTP 설정 (선택 사항)
# Supabase Auth의 기본 이메일 서비스를 사용하거나, 별도 SMTP 설정 가능
# 정치인 본인 인증 이메일 발송에 사용됨 (P4BA18)

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_app_password
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@politicianfinder.com

# 참고: Gmail을 사용하는 경우 "앱 비밀번호"를 생성하여 SMTP_PASS에 입력하세요
# https://myaccount.google.com/apppasswords

# ============================================================================
# 로깅 및 모니터링
# ============================================================================

# 로그 레벨 (debug, info, warn, error)
LOG_LEVEL=debug

# Sentry DSN (에러 추적)
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# ============================================================================
# 기능 플래그
# ============================================================================

# 구글 OAuth 활성화
NEXT_PUBLIC_ENABLE_GOOGLE_OAUTH=true

# 이메일 인증 필수
NEXT_PUBLIC_REQUIRE_EMAIL_VERIFICATION=true

# 회원가입 활성화
NEXT_PUBLIC_ENABLE_SIGNUP=true

# ============================================================================
# 완료
# ============================================================================
# P1D5: 환경변수 템플릿 생성 완료
#
# 사용 방법:
# 1. 이 파일을 복사하여 .env.local 파일 생성
#    cp .env.local.example .env.local
#
# 2. .env.local 파일에 실제 값 입력
#    - Supabase 콘솔에서 API 키 발급
#    - Google Cloud Console에서 OAuth 클라이언트 생성
#    - JWT_SECRET 생성: openssl rand -base64 32
#
# 3. .env.local 파일은 .gitignore에 포함되어 있어 Git에 커밋되지 않음
#
# ⚠️ 주의:
# - .env.local 파일은 절대 Git에 커밋하지 마세요!
# - SUPABASE_SERVICE_ROLE_KEY는 서버 측에서만 사용하세요!
# - 프로덕션 환경에서는 환경변수를 안전하게 관리하세요!
